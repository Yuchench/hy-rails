<%= bootstrap_form_for(@firework, layout: :horizontal) do |f| %>
  <%= f.text_field :name_id , :label =>'產品編號' %>
  <%= f.text_field :name , :label =>'產品名稱' %>
   <%= f.select :product_type, options_for_select([["請選擇種類", ""], ["煙火特效類","effect"], ["鋼瓶發射性特效","project"], ["煙霧類特效","smoke"],["道具類特效","gadge"],["機械式特效","mech"],["特殊效果","special"],["煙火類","firework"]]) %>
       <%= f.text_area :content, :label => '產品詳細內容' %>
    <%= f.file_field :image, :label => '產品圖片' %>
    <%= f.text_field :youtube_url, :label => 'Youtube Link' %>
  <%= f.primary "新增" %>
<% end %>