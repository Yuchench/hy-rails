<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>活動日期</th>
      <th>活動名稱</th>
      <th>Link</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_date %></td>
        <td><%= event.name %></td>
        <td><%= link_to 'Link', event.url %></td>
        <td><%= link_to '刪除', [:admin,event], method: :delete, data: { confirm: '確定刪除此活動？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
