<div class="content-block">
  <h4><%=product_type_chinese(@product_type)%></h4>
  <table class="table">
    <thead>
      <tr>
        <th>影片/圖片參考 Reference</th>
        <th>編號 Code</th>
        <th>產品名稱 Product</th>
        <th>產品敘述 Description</th>
      </tr>
    </thead>

    <tbody>
      <% @fireworks.each do |firework| %>
      <tr>
        <td>  <%= link_to "#{image_tag(firework.image.url(:thumb))}".html_safe, firework.youtube_url,:class => 'fancybox-media' %></td>
        <td><%= firework.name_id %></td>
        <td><%= firework.name %></td>
        <td><%= firework.content %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>