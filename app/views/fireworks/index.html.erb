<h3>宏益舞台特效公司(管理界面)</h3>
<br>
<%= button_to '新增產品', new_firework_path ,:class => 'btn btn-primary',:method => :get %>
<br>
<%=products_navs%>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>產品編號</th>
      <th>產品名稱</th>
      <th>產品類型</th>
      <th>產品詳細內容</th>
      <th>產品圖片</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fireworks.each do |firework| %>
      <tr>
        <td><%= firework.name_id %></td>
        <td><%= firework.name %></td>
        <td><span class="badge"><%= product_type_chinese(firework.product_type) %></span></td>
        <td><%= firework.content %></td>
        <td><%= image_tag firework.image.url(:square),:class=>'img-rounded' %></td>
        <td><%= link_to '詳細內容', firework %></td>
        <td><%= link_to '編輯', edit_firework_path(firework) %></td>
        <td><%= link_to '刪除', firework, method: :delete, data: { confirm: '確定刪除此產品？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>